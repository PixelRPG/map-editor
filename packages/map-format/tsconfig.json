{
  "extends": "../excalibur/tsconfig.json",
  "compilerOptions": {
    // Modern ESM output
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "outDir": "./dist",
    "lib": ["dom", "dom.iterable", "es5", "es2018"],
    "noEmit": true,
    "allowImportingTsExtensions": true,
  },
  "include": ["env.d.ts", "src/**/*"],
  "exclude": ["node_modules", "dist"]
} 