{
  "compilerOptions": {
    // Modern ESM output
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "outDir": "./dist",
    "lib": ["dom", "dom.iterable", "es5", "ESNext"],
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "types": [],
    "noUnusedLocals": false, // Temporary for @excaliburjs-plugin-tiled
  },
  "include": ["env.d.ts", "src/main.ts"],
  "exclude": ["node_modules", "dist"]
} 