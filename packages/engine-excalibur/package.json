{
    "name": "@pixelrpg/engine-excalibur",
    "version": "0.0.1",
    "description": "Browser side browser part of the map editor",
    "main": "dist/index.html",
    "type": "module",
    "private": true,
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "clear": "rm -rf dist",
        "preview": "yarn clear && yarn build && vite preview",
        "start": "yarn preview",
        "build:esbuild": "esbuilder --outdir ./dist",
        "build:vite": "vite build",
        "build:assets": "mkdir -p ./dist && cp -r ./src/assets ./dist",
        "build": "yarn build:assets && yarn build:vite",
        "check": "tsc --noEmit"
    },
    "author": "Pascal Garber <pascal@artandcode.studio>",
    "license": "MIT",
    "devDependencies": {
        "@pixelrpg/esbuild": "workspace:^",
        "@rollup/pluginutils": "^5.1.4",
        "typescript": "^5.8.2",
        "vite": "^6.2.0"
    },
    "dependencies": {
        "@excaliburjs/dev-tools": "^0.28.0",
        "@excaliburjs/plugin-tiled": "workspace:^",
        "@pixelrpg/common": "workspace:^",
        "@pixelrpg/data-core": "workspace:^",
        "@pixelrpg/data-excalibur": "workspace:^",
        "@pixelrpg/messages-webview": "workspace:^",
        "excalibur": "workspace:^",
        "vite-plugin-glsl": "^1.3.3"
    }
}
