{
    "name": "@pixelrpg/client",
    "version": "0.0.1",
    "description": "Client side of the map editor",
    "main": "dist/main.js",
    "type": "module",
    "private": true,
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "clear": "rm -rf dist",
        "serve": "yarn build:assets && esbuilder --serve --outfile ./dist/main.js",
        "build:esbuild": "esbuilder --outfile ./dist/main.js",
        "build:assets": "mkdir -p ./dist && cp -r ./src/assets ./dist && cp ./index.html ./dist && cp ./main.css ./dist",
        "build": "yarn build:assets && yarn build:esbuild"
    },
    "author": "Pascal Garber <pascal@artandcode.studio>",
    "license": "MIT",
    "devDependencies": {
        "@pixelrpg/esbuild": "workspace:^",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "@excaliburjs/dev-tools": "^0.28.0",
        "@excaliburjs/plugin-tiled": "workspace:^",
        "@pixelrpg/common": "workspace:^",
        "@pixelrpg/messages-webview": "workspace:^",
        "excalibur": "workspace:^"
    }
}
