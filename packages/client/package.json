{
    "name": "@pixelrpg/client",
    "version": "0.0.1",
    "description": "Client side of the map editor",
    "main": "dist/main.js",
    "type": "module",
    "private": true,
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "clear": "rm -rf dist",
        "serve": "yarn build:html && esbuilder --serve --outfile ./dist/main.js",
        "build:esbuild": "esbuilder --outfile ./dist/main.js",
        "build:html": "cp ./index.html ./dist/index.html",
        "build": "yarn build:esbuild && yarn build:html"
    },
    "author": "Pascal Garber <pascal@artandcode.studio>",
    "license": "MIT",
    "devDependencies": {
        "@pixelrpg/esbuild": "workspace:^",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "@pixelrpg/common": "workspace:^",
        "@pixelrpg/messages-webview": "workspace:^",
        "excalibur": "workspace:^"
    }
}
