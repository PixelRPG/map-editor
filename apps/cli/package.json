        "@pixelrpg/data-excalibur": "workspace:^",
        "@pixelrpg/messages-core": "workspace:^",
        "esbuild": "^0.25.0",
        "fast-xml-parser": "^5.0.8",
        "jsdom": "^26.0.0",
        "yargs": "^17.7.2"
    },
    "devDependencies": {
        "@types/jsdom": "^21.1.7",
        "@types/node": "^22.13.8",
        "@types/yargs": "^17.0.33",
        "typescript": "^5.8.2"
    }
}
